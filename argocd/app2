apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: demo-nginx-v2
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://github.com/Learnwithkarthik/argocd-gitops-lab.git
    targetRevision: main
    path: apps/demo-nginx-v2
  destination:
    server: https://kubernetes.default.svc
    namespace: demo-v2
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
